<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
  <% @users.each do |user| %>
    <div class="col mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= user.first_name %> <%= user.last_name %></h5>
          <p class="card-text"><%= user.experience_level %></p>
          <p class="card-text">I'm currently working on</p>
          <p class="card-text"><small class="text-muted"><%= user.programming_languages %></small></p>
        </div>
        <%= image_tag user.avatar, alt: 'user avatar', class: "card-img-bottom" %>
      </div>
    </div>
  <% end %>
</div>