<div class="row">
  <% @users.each do |user| %>
    <div class="mb-5 col-lg-4 col-md-6 col-sm-12">
      <div class="card h-100 border border-0 rounded-5">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <h4 class="card-title"><%= user.first_name %> <%= user.last_name %></h4>
            <a href="#" class="favorite-icon">
              <i class="far fa-heart"></i>
            </a>
          </div>
          <p class="card-text"><i class="fa-solid fa-desktop"> </i><span class="icon-space"></span> <%= user.experience_level %></p>
          <p class="card-text"><i class="fa-solid fa-book-open"><span class="icon-space"></i> I'm currently working on</p>
          <p class="card-text"><small class="text-muted"><%= user.programming_languages %></small></p>
        </div>
        <div class="p-3">
          <%= image_tag user.avatar, alt: 'user avatar', class: "card-img-bottom  rounded-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

