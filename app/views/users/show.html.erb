<!-- Navbar place holder -->
<div class="" style="width:100%; height: 50px; background-color:white; margin-bottom:20px; border-bottom: 1px solid black;">
</div>

<div class="container">

  <!-- Placeholder button -->
  <button style="background-color:black; padding:1px 20px; color:white; border-radius:10px; font-size:10px;">< back</button>

  <div class="row align-items-start mt-5">
    <div class="col-md-6">

      <h1><%= @user.username %>'s Profile</h1>
      <p><strong>First Name:</strong> <%= @user.first_name %></p>
      <p><strong>Last Name:</strong> <%= @user.last_name %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Experience Level:</strong> <%= @user.experience_level %></p>
      <p><strong>Days Availability:</strong> <%= @user.days_availability %></p>
      <p><strong>Time Availability:</strong> <%= @user.time_availability %></p>
      <p><strong>About Me:</strong> <%= @user.about_me %></p>
      <p><strong>Programming Languages:</strong> <%= @user.programming_languages %></p>
      <% if @user.avatar.present? %>
        <p><strong>Avatar:</strong></p>
        <%= image_tag(@user.avatar, style: "width:100px;") %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1>Test</h1>
    </div>
  </div>
</div>
