<div id="users-show">
  <div class="flex-container">
    <div class="row">
      <!-- White background part -->
      <div class="col white-bg">
        <div class="container">
          <!-- Placeholder button -->
          <button style="background-color:black; padding:1px 20px; color:white; border-radius:30px; font-size:17px;">< back</button>

          <div class="avatar-and-main-info">
            <div class="avatar">
              <% if @user.avatar.present? %>
                <%= image_tag(@user.avatar, style: "width:320px; height:240px; object-fit:cover; border-radius:20px;") %>
              <% end %>
            </div>
            <div class="user-main-info">
              <h3><%= @user.first_name %> <%= @user.last_name %></h3>
            </div>
          </div>

          <div class="about-me">
            <h3>About me</h3>
            <p><%= @user.about_me %></p>
          </div>

          <div class="achievements">
            <h3>Achievements</h3>
          </div>

          <div class="programming-languages">
            <h3>Currently using...</h3>
          </div>

        </div>
      </div>
      <!-- Yellow background part -->
      <div class="col yellow-bg">
        <div class="container yellow-container">
          <h1 style="width:300px; font-size:25px;">Confirm your appointment with <%= @user.username %></h1>

          <div style="width: 280px; display: flex; flex-wrap: wrap;">
            <% @user.time_slots.each do |slot| %>
              <div style="background-color:white; width:120px; height:120px; margin: 10px 20px; margin-left:0; padding: 10px; display: flex;">
                <p style="display: grid; place-items: center; text-align:center;"><%= slot.day %>, <%= slot.start_time.strftime("%R") %> to <%= slot.end_time.strftime("%R") %></p>
              </div>
            <% end %>

            <!-- Placeholder button -->
            <button class="confirm-button">confirm</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
