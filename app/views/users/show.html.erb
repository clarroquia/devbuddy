<!-- Navbar place holder -->
<div style="width:100%; height: 100px; background-color:white; border-bottom: 1px solid black; padding:0;"></div>

<div style="display: flex; flex-direction: column; height: 100vh; padding:0;">
  <div class="row" style="display: flex; flex: 1; width: 100%; margin:0;">
    <div class="col" style="flex: 1; padding: 10px; background-color: #fff;">
      <div class="container" style="margin: 20px 200px;">
        <!-- Placeholder button -->
        <button style="background-color:black; padding:1px 20px; color:white; border-radius:30px; font-size:17px;">< back</button>

        <div class="avatar-and-main-info" style="display: flex; align-items: center; margin-top: 20px;">
          <div class="avatar">
            <% if @user.avatar.present? %>
              <%= image_tag(@user.avatar, style: "width:320px; height:240px; object-fit:cover; border-radius:20px;") %>
            <% end %>
          </div>
          <div class="user-main-info">
            <h2><%= @user.first_name %> <%= @user.last_name %></h2>
          </div>
        </div>

        <h1><%= @user.username %>'s Profile</h1>
        <p><strong>First Name:</strong> <%= @user.first_name %></p>
        <p><strong>Last Name:</strong> <%= @user.last_name %></p>
        <p><strong>Email:</strong> <%= @user.email %></p>
        <p><strong>Experience Level:</strong> <%= @user.experience_level %></p>
        <p><strong>Days Availability:</strong> <%= @user.days_availability %></p>
        <p><strong>Time Availability:</strong> <%= @user.time_availability %></p>
        <p><strong>About Me:</strong> <%= @user.about_me %></p>
        <p><strong>Programming Languages:</strong> <%= @user.programming_languages %></p>
      </div>
    </div>
    <div class="col" style="flex: 1; padding: 10px; background-color: #fee53f;">
      <div class="container" style="margin-top:150px; width: 80%; max-width: 280px; margin: 150px auto 0 auto;">
        <h1 style="width:300px; font-size:25px;">Confirm your appointment with <%= @user.username %></h1>

        <div class="" style="width: 280px; display: flex; flex-wrap: wrap;">
          <% 6.times do %>
            <div class="" style="background-color:white; width:120px; height:120px; margin: 10px 20px; margin-left:0; padding: 10px; display: flex;">
              <p style="display: grid; place-items: center; text-align:center;">March 30, 16:00hr</p>
            </div>
          <% end %>

          <!-- Placeholder button -->
          <button style="background-color:#2d2d2d; padding:1px 20px; color:white; border-radius:30px; font-size:16px; font-style:bold; width:260px; margin-top:40px;">confirm</button>
        </div>
      </div>
    </div>
  </div>
</div>
