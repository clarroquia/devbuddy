<!-- Navbar place holder -->
<div style="width:100%; height: 50px; background-color:white; border-bottom: 1px solid black; padding:0;">
</div>

<div style="display: flex; flex-direction: column; height: 100vh; padding:0;">

  <div class="row" style="display: flex; flex: 1; width: 100%; margin:0;">
    <div class="col" style="flex: 1; padding: 10px; background-color: #fff;">

      <!-- Placeholder button -->
      <button style="background-color:black; padding:1px 20px; color:white; border-radius:10px; font-size:10px;">< back</button>

      <div class="container" style="margin: 50px 100px;">
        <h1><%= @user.username %>'s Profile</h1>
        <p><strong>First Name:</strong> <%= @user.first_name %></p>
        <p><strong>Last Name:</strong> <%= @user.last_name %></p>
        <p><strong>Email:</strong> <%= @user.email %></p>
        <p><strong>Experience Level:</strong> <%= @user.experience_level %></p>
        <p><strong>Days Availability:</strong> <%= @user.days_availability %></p>
        <p><strong>Time Availability:</strong> <%= @user.time_availability %></p>
        <p><strong>About Me:</strong> <%= @user.about_me %></p>
        <p><strong>Programming Languages:</strong> <%= @user.programming_languages %></p>
          <% if @user.avatar.present? %>
            <p><strong>Avatar:</strong></p>
            <%= image_tag(@user.avatar, style: "width:100px;") %>
          <% end %>
      </div>
    </div>
    <div class="col" style="flex: 1; padding: 10px; background-color: #fee53f;">
      <div class="container" style="margin:150px 200px;">
        <h1 style="width:300px; font-size:25px;">Confirm your appointment with <%= @user.username %></h1>

        <div class="" style="width: 320px; display: flex; flex-wrap: wrap;">
          <% 6.times do %>
            <div class="" style="background-color:white; width:100px; height:100px; margin: 10px; padding: 10px; display: flex;">
              <p>March 30, 16:00hr</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
